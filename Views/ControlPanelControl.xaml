<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="App2.Views.ControlPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="using:App2.ViewModels"
             mc:Ignorable="d">

    <Border Margin="0,10,0,0"
            Padding="8,12">
        <Grid RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="12">
                <ToggleButton x:Name="BtnStartStop"
                              MinWidth="96"
                              Content="{x:Bind ViewModel.StartStopButtonContent, Mode=OneWay}"
                              IsChecked="{x:Bind ViewModel.StartStopButtonChecked, Mode=OneWay}"
                              Click="StartStopButton_Click" />
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Spacing="8">
                    <FontIcon Glyph="&#xECCC;"
                              x:Name="IconStatus"
                              Foreground="{x:Bind ViewModel.StatusIconForeground, Mode=OneWay}" />
                    <TextBlock x:Name="TxtStatus"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Text="{x:Bind ViewModel.StatusText, Mode=OneWay}" />
                </StackPanel>

                <Border Padding="8,4"
                        Visibility="{x:Bind ViewModel.IsRouteModeBadgeVisible, Mode=OneWay}"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                                Spacing="4">
                        <FontIcon Glyph="{x:Bind ViewModel.RouteModeBadgeIcon, Mode=OneWay}"
                                  FontSize="12"
                                  Foreground="{x:Bind ViewModel.RouteModeBadgeForeground, Mode=OneWay}"
                                  VerticalAlignment="Center" />
                        <TextBlock Text="{x:Bind ViewModel.RouteModeBadgeText, Mode=OneWay}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{x:Bind ViewModel.RouteModeBadgeForeground, Mode=OneWay}"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <Button Background="Transparent"
                        BorderBrush="Transparent"
                        VerticalAlignment="Center">
                    <Button.Content>
                        <FontIcon Glyph="&#xE713;"
                                  FontSize="13" />
                    </Button.Content>
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="编辑本地端口"
                                            Click="EditLocalPortMenuItem_Click" />
                            <MenuFlyoutItem Text="查看日志"
                                            Click="ViewLogsMenuItem_Click" />
                            <MenuFlyoutItem Text="设置主题"
                                            Click="ThemeButton2Click" />
                            <MenuFlyoutSubItem Text="路由设置"
                                               IsEnabled="{x:Bind ViewModel.CanEditRouteSettings, Mode=OneWay}">
                                <MenuFlyoutItem Text="全局路由"
                                                Click="GlobalRouteMenuItem_Click" />
                                <MenuFlyoutItem Text="绕过大陆"
                                                Click="BypassChinaMenuItem_Click" />
                            </MenuFlyoutSubItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>

            <TeachingTip Title="色彩模式"
                         PreferredPlacement="Auto"
                         x:Name="TestButton2TeachingTip"
                         PlacementMargin="20">
                <TeachingTip.Content>
                    <StackPanel Orientation="Horizontal"
                                Spacing="10">
                        <Button MinWidth="70"
                                Padding="12,8"
                                Tag="Light"
                                Click="ThemeButton_Click">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="6">
                                <FontIcon Glyph="&#xE706;"
                                          FontSize="14" />
                                <TextBlock Text="浅色"
                                           FontSize="14" />
                            </StackPanel>
                        </Button>
                        <Button MinWidth="70"
                                Padding="12,8"
                                Tag="Dark"
                                Click="ThemeButton_Click">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="6">
                                <FontIcon Glyph="&#xE708;"
                                          FontSize="14" />
                                <TextBlock Text="深色"
                                           FontSize="14" />
                            </StackPanel>
                        </Button>
                        <Button MinWidth="70"
                                Padding="12,8"
                                Tag="Default"
                                Click="ThemeButton_Click">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="6">
                                <FontIcon Glyph="&#xE770;"
                                          FontSize="14" />
                                <TextBlock Text="跟随系统"
                                           FontSize="14" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </TeachingTip.Content>
            </TeachingTip>

            <Grid Grid.Row="1"
                  ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Spacing="16">
                    <Border Padding="12,8">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="2">
                            <TextBlock Text="本地端口："
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock x:Name="TxtLocalPortValue"
                                       Text="{x:Bind ViewModel.LocalPortText, Mode=OneWay}"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Spacing="8">
                    <TextBlock Text="代理模式: "
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="0,0,4,0" />
                    <ComboBox SelectedIndex="{x:Bind ViewModel.ProxyModeIndex, Mode=TwoWay}"
                              IsEnabled="{x:Bind ViewModel.CanChangeProxyMode, Mode=OneWay}"
                              MinWidth="100">
                        <x:String>全局代理</x:String>
                        <x:String>PAC模式</x:String>
                        <x:String>直连模式</x:String>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
