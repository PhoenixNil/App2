<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="App2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:App2"
        xmlns:models="using:App2.Models"
        xmlns:viewmodels="using:App2.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="代理控制台">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar x:Name="AppTitleBar"
                  Title="代理控制台">
            <TitleBar.IconSource>
                <FontIconSource Glyph="&#xE705;" />
            </TitleBar.IconSource>
        </TitleBar>

        <Grid Grid.Row="1"
              Margin="16"
              ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <!-- 左侧：使用比例，但限制最大宽度 -->
                <ColumnDefinition Width="1.2*" MinWidth="380" MaxWidth="600" />
                <!-- 右侧：使用比例，保证足够空间 -->
                <ColumnDefinition Width="1.5*" MinWidth="400" />
            </Grid.ColumnDefinitions>

            <!-- Server list and actions -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Vertical">
                    <TextBlock Text="服务器列表"
                               FontSize="20"
                               FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Spacing="8"
                                Margin="0,8,0,0">
                        <DropDownButton x:Name="BtnAdd"
                                        Content="添加"
                                        Padding="12,6">
                            <DropDownButton.Flyout>
                                <MenuFlyout Placement="BottomEdgeAlignedLeft">
                                    <MenuFlyoutItem Text="从SS链接导入"
                                                    Click="BtnImportSS_Click"
                                                    FontWeight="Normal">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE77F;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="手动添加新服务器"
                                                    Click="BtnAddManual_Click"
                                                    FontWeight="Normal">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE710;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </DropDownButton.Flyout>
                        </DropDownButton>
                        <Button x:Name="BtnEdit"
                                Click="BtnEdit_Click"
                                IsEnabled="{x:Bind ViewModel.CanEditServer, Mode=OneWay}"
                                Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE70F;"
                                          Margin="0,0,5,0" />
                                <TextBlock Text="编辑" />
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnRemove"
                                Click="BtnRemove_Click"
                                IsEnabled="{x:Bind ViewModel.CanRemoveServer, Mode=OneWay}"
                                Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE74D;"
                                          Margin="0,0,5,0" />
                                <TextBlock Text="删除" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <AutoSuggestBox Grid.Row="1"
                                PlaceholderText="Search..."
                                QueryIcon="Find"
                                HorizontalAlignment="Stretch"
                                Margin="0,16,0,16"
                                VerticalAlignment="Center"
                                UpdateTextOnSelect="True"
                                TextMemberPath="Name" />

                <ListView Grid.Row="2"
                          x:Name="ServersListView"
                          ItemsSource="{x:Bind ViewModel.Servers, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedServer, Mode=TwoWay}"
                          CanDragItems="True"
                          CanReorderItems="True"
                          AllowDrop="True"
                          SelectionMode="Single"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:ServerEntry">
                            <StackPanel Orientation="Vertical"
                                        Spacing="6"
                                        Margin="0,12,0,12">
                                <Grid ColumnDefinitions="*, Auto"
                                      VerticalAlignment="Center">

                                    <!-- 左侧内容 -->
                                    <TextBlock Text="{x:Bind Name, Mode=OneWay}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Grid.Column="0"
                                               TextTrimming="CharacterEllipsis" />

                                    <!-- 右侧 Activated 标识 -->
                                    <Border Background="{ThemeResource SystemFillColorSuccessBrush}"
                                            CornerRadius="4"
                                            Padding="6,2"
                                            Visibility="{x:Bind IsActive, Mode=OneWay}"
                                            Grid.Column="1"
                                            Margin="8,0,0,0">
                                        <TextBlock Text="● Activated"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="White" />
                                    </Border>
                                </Grid>

                                <StackPanel Orientation="Horizontal"
                                            Spacing="8">
                                    <TextBlock Text="{x:Bind Host, Mode=OneWay}"
                                               FontSize="13"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock Text="{x:Bind Port, Mode=OneWay}"
                                               FontSize="13"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                            CornerRadius="4"
                                            Padding="6,2"
                                            Margin="4,0,0,0">
                                        <TextBlock Text="{x:Bind Method, Mode=OneWay}"
                                                   FontSize="11"
                                                   Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <!-- Details and runtime controls -->
            <Grid Grid.Column="1"
                  VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- 标题 -->
                    <RowDefinition Height="*" />
                    <!-- 可滚动内容 -->
                    <RowDefinition Height="Auto" />
                    <!-- 底部工具条 -->
                </Grid.RowDefinitions>

                <!-- 标题 -->
                <TextBlock Grid.Row="0"
                           Text="服务器详情"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,16" />

                <!-- 详情内容 - 卡片样式 -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0,0,0,12">
                    <StackPanel Orientation="Vertical"
                                Spacing="8"
                                Padding="0,0,12,80">

                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="16"
                                Padding="20">
                            <StackPanel Orientation="Vertical"
                                        Spacing="12">

                                <!-- ========== 基本信息：两列网格，不再嵌套 StackPanel ========== -->
                                <Grid x:Name="InfoGrid"
                                      ColumnSpacing="12"
                                      RowSpacing="10">
                                    <Grid.ColumnDefinitions>
                                    
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- 名称 -->
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Spacing="8">
                                        <SymbolIcon Symbol="Contact" />
                                        

                                        <TextBlock 
                                               Text="名称"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               x:Name="TxtName"
                                               Text="{x:Bind ViewModel.SelectedName, Mode=OneWay}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               TextWrapping="WrapWholeWords" />

                                    <!-- 地址 -->
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Spacing="8">
                                        <FontIcon Foreground="{ThemeResource AccentAcrylicBackgroundFillColorDefaultBrush}"
                                                  Glyph="&#xE774;" />
                                        <TextBlock 
                                                   
                                                   Text="地址"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               x:Name="TxtHost"
                                               Text="{x:Bind ViewModel.SelectedHost, Mode=OneWay}"
                                               FontSize="16"
                                               TextWrapping="WrapWholeWords" />

                                    <!-- 端口 -->
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                Spacing="8">
                                        <FontIcon Foreground="#73d3ff"  Glyph="&#xE95F;" />
                                        <TextBlock Text="端口"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <TextBlock Grid.Row="2"
                                               Grid.Column="1"
                                               x:Name="TxtPort"
                                               Text="{x:Bind ViewModel.SelectedPort, Mode=OneWay}"
                                               FontSize="16" />

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                Spacing="8">
                                        <FontIcon Foreground="#FFA14D" Glyph="&#xE72E;" />

                                        <TextBlock 
                                                   
                                                   Text="加密方式"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <TextBlock x:Name="TxtMethod"
                                               Grid.Row="3"
                                               Grid.Column="1"
                                               Text="{x:Bind ViewModel.SelectedMethod, Mode=OneWay}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                                />
                                </Grid>

                                <!-- 细分隔线 -->
                                <Rectangle Height="1"
                                           Fill="{ThemeResource ControlStrokeColorDefaultBrush}"
                                           Opacity="0.5"
                                           Margin="0,4,0,0" />

                                <!-- ========== 网络延迟：单独一张卡，和上面的 Grid 不是同一行 ========== -->
                                <Border Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                        
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Padding="16">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="6">
                                            <FontIcon Glyph="&#xE9D9;"
                                                      Foreground="#A67CA8"
                                                      VerticalAlignment="Center" />
                                            <TextBlock Text="网络延迟"
                                                       FontSize="13"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>

                                        <TextBlock Grid.Column="1"
                                                   x:Name="TxtLatency"
                                                   Text="{x:Bind ViewModel.LatencyText, Mode=OneWay}"
                                                   Foreground="{x:Bind ViewModel.LatencyForeground, Mode=OneWay}"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0" />

                                        <Button Grid.Column="2"
                                                x:Name="BtnTestLatency"
                                                Command="{x:Bind ViewModel.TestLatencyCommand}"
                                                IsEnabled="{x:Bind ViewModel.CanTestLatency, Mode=OneWay}"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                Padding="8"
                                                ToolTipService.ToolTip="重新测试延迟"
                                                VerticalAlignment="Center">
                                            <FontIcon x:Name="IconTestLatency"
                                                      Glyph="&#xE72C;"
                                                      FontSize="14" />
                                        </Button>
                                    </Grid>
                                </Border>

                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>

                <!-- 底部工具条（贴底） -->
                <Border Grid.Row="2"
                        Margin="0,10,0,0"
                        Padding="8,12"
                        
                        >
                    <Grid RowSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 第一行：启动/停止与状态 -->
                        <StackPanel Grid.Row="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Spacing="12">
                            <ToggleButton x:Name="BtnStartStop"
                                          MinWidth="96"
                                          Content="{x:Bind ViewModel.StartStopButtonContent, Mode=OneWay}"
                                          IsChecked="{x:Bind ViewModel.StartStopButtonChecked, Mode=OneWay}"
                                          Click="Button_Click" />
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Spacing="8">
                                <FontIcon Glyph="&#xECCC;"
                                          x:Name="IconStatus" 
                                          Foreground="{x:Bind ViewModel.StatusIconForeground, Mode=OneWay}"/>
                                <TextBlock x:Name="TxtStatus"
                                           VerticalAlignment="Center"
                                           FontWeight="SemiBold"
                                           Text="{x:Bind ViewModel.StatusText, Mode=OneWay}" />
                            </StackPanel>
                            <Button Background="Transparent"
                                    BorderBrush="Transparent"
                                    VerticalAlignment="Center"
                                    >
                                <Button.Content>
                                    <FontIcon Glyph="&#xE713;"
                                              
                                              FontSize="13" />
                                </Button.Content>
                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="编辑本地端口"
                                                        Click="EditLocalPortMenuItem_Click" />
                                        <MenuFlyoutItem Text="查看日志"
                                                        Click="ViewLogsMenuItem_Click" />
                                        <MenuFlyoutItem Text="设置主题"
                                                        Click="TestButton2Click" />
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                        <!-- 方案2: 使用图标+文字，视觉更丰富 -->
                        <TeachingTip Title="色彩模式"
                                     PreferredPlacement="Auto"
                                     x:Name="TestButton2TeachingTip"
                                     PlacementMargin="20"
                                     >
                            <TeachingTip.Content>
                                <StackPanel Orientation="Horizontal"
                                            Spacing="10">
                                    <Button MinWidth="70"
                                            Padding="12,8"
                                            Tag="Light"
                                            Click="ThemeButton_Click">
                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="6">
                                            <FontIcon Glyph="&#xE706;"
                                                      FontSize="14" />
                                            <TextBlock Text="浅色"
                                                       FontSize="14" />
                                        </StackPanel>
                                    </Button>
                                    <Button MinWidth="70"
                                            Padding="12,8"
                                            Tag="Dark"
                                            Click="ThemeButton_Click">
                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="6">
                                            <FontIcon Glyph="&#xE708;"
                                                      FontSize="14" />
                                            <TextBlock Text="深色"
                                                       FontSize="14" />
                                        </StackPanel>
                                    </Button>
                                    <Button MinWidth="70"
                                            Padding="12,8"
                                            Tag="Default"
                                            Click="ThemeButton_Click">
                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="6">
                                            <FontIcon Glyph="&#xE770;"
                                                      FontSize="14" />
                                            <TextBlock Text="跟随系统"
                                                       FontSize="14" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </TeachingTip.Content>
                        </TeachingTip>

                        <!-- 第二行：端口信息与模式切换 -->
                        <Grid Grid.Row="1"
                              ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- 左侧：端口信息 -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Spacing="16">

                                <Border 
                                        
                                        Padding="12,8">
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="2">
                                        <TextBlock Text="本地端口："
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock x:Name="TxtLocalPortValue"
                                                   Text="{x:Bind ViewModel.LocalPortText, Mode=OneWay}"
                                                   FontWeight="SemiBold" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- 右侧：模式切换 -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Spacing="8">
                                <TextBlock Text="代理模式: "
                                           VerticalAlignment="Center"
                                           FontWeight="SemiBold"
                                           Margin="0,0,4,0" />
                                <ComboBox SelectedIndex="{x:Bind ViewModel.ProxyModeIndex, Mode=TwoWay}"
                                          MinWidth="100">
                                    <x:String>全局模式</x:String>
                                    <x:String>PAC模式</x:String>
                                    <x:String>直连模式</x:String>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>


            </Grid>

        </Grid>
    </Grid>
</Window>
